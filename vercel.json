{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "npm install && cd api && npm install",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/serverless"
    },
    {
      "source": "/echo",
      "destination": "/api/serverless"
    }
  ]
}

